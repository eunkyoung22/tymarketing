<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tyCafe.login.Dao.LoginDao">
	<resultMap id="memberLogin" type="tyCafe.login.VO.LoginVO">
        <result property="id" column="id"/>
        <result property="password" column="password"/>
    </resultMap>
    
	<select id="memberLogin" resultMap="memberLogin" resultType="tyCafe.login.VO.LoginVO">
		SELECT id,
			   password
	      FROM login
	     WHERE id = #{id}
	       AND password = #{password}
	</select>
</mapper>